            <input type="text" id="nameInp" placeholder="Nome do Script">
            <textarea id="descInp" placeholder="DescriÃ§Ã£o"></textarea>
            <textarea id="codeInp" placeholder="Cole o cÃ³digo LUA aqui" rows="5"></textarea>
            <button onclick="postar()">POSTAR AGORA</button>
