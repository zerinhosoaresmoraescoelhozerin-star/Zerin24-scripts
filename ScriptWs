    <script>
        function openNav() { document.getElementById("mySidebar").style.width = "250px"; }
        function closeNav() { document.getElementById("mySidebar").style.width = "0"; }

        function showSection(id) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            closeNav();
        }

        let db = JSON.parse(localStorage.getItem('scriptws_db')) || [];

        function postar() {
            const name = document.getElementById('nameInp').value;
            const desc = document.getElementById('descInp').value;
            const code = document.getElementById('codeInp').value;
            if(!name || !code) return alert("Preencha tudo!");

            const rawLink = "http://ScriptWs/raw/" + name.replace(/\s+/g, '-').toLowerCase();
            db.push({ name, desc, code, rawLink });
            localStorage.setItem('scriptws_db', JSON.stringify(db));
            alert("Postado!");
            location.reload();
        }

        function render() {
            const list = document.getElementById('list');
            list.innerHTML = db.map((s, i) => `
                <div class="card script-item">
                    <h3>${s.name}</h3>
                    <p>${s.desc}</p>
                    <button onclick="verRaw(${i})">VER RAW</button>
                    <button class="btn-secondary" onclick="verLoad(${i})">VER LOADSTRING</button>
                </div>
            `).join('') || '<p style="text-align:center">Nenhum script.</p>';
        }

        function verRaw(i) {
            const s = db[i];
            showSection('raw-tab');
            document.getElementById('raw-info').innerText = "Caminho: " + s.rawLink;
            document.getElementById('raw-display').innerHTML = `
                <div class="code-box">${s.code}</div>
                <button onclick="copy('${s.code}')">COPIAR CÃ“DIGO</button>
            `;
        }

        function verLoad(i) {
            const s = db[i];
            const load = `loadstring(game:HttpGet("${s.rawLink}"))()`;
            showSection('loadstring');
            document.getElementById('load-display').innerHTML = `
                <div class="card">
                    <p>Use este comando no Delta:</p>
                    <div class="code-box">${load}</div>
                    <button onclick="copy('${load}')">COPIAR LOADSTRING</button>
                </div>
            `;
        }

        function copy(text) {
            const t = document.createElement('textarea');
            t.value = text;
            document.body.appendChild(t);
            t.select();
            document.execCommand('copy');
            document.body.removeChild(t);
            alert("Copiado!");
        }

        function filter() {
            let q = document.getElementById('search').value.toLowerCase();
            document.querySelectorAll('.script-item').forEach(c => {
                c.style.display = c.innerText.toLowerCase().includes(q) ? "block" : "none";
            });
        }

        window.onload = render;
    </script>
